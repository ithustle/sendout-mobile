<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_campaig"
        android:paddingTop="5dp"
        android:id="@+id/icon_campanha"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nome_campanha"
        android:text="Nome da campanha"
        android:paddingTop="10dp"
        android:textSize="22sp"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/icon_campanha"
        android:lines="1"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pressione para mais opções. Toque para editar."
        android:textColor="#c1c1c1"
        android:textSize="13sp"
        android:layout_toRightOf="@+id/icon_campanha"
        android:layout_below="@+id/nome_campanha"
        android:id="@+id/campanha_texto_help"
        android:ellipsize="end"
        android:lines="1"
        android:paddingBottom="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/campanha_id"
        android:visibility="invisible"/>

</RelativeLayout>