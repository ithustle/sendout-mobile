<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:id="@+id/nome_produto"
        android:text="Pacote de chamadas de 15 minutos para vocÃª"
        android:lines="2"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/preco_produto"
        android:text="380,00 KZ"
        android:textSize="18sp"
        android:textColor="#29A9E1"
        android:textStyle="bold"
        android:layout_alignParentRight="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="@string/texto_dialgo_ok"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:layout_below="@+id/nome_produto"
        android:layout_above="@+id/imageView2"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:id="@+id/dialog_ko_button"
        android:text="@string/dialogo_pagar_ko"
        android:background="#29A9E1"
        android:textColor="#fff"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="16dp"
        android:layout_below="@+id/preco_produto"
        android:layout_centerHorizontal="true"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ko_logo_cinza"
        android:layout_alignTop="@+id/dialog_ko_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/imageView2" />

</RelativeLayout>