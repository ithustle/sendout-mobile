<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_introduction_registering_caller_id"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_intro_register_caller_id"
        android:textSize="16sp"
        android:id="@+id/cred"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_passos_register_caller_id"
        android:layout_below="@+id/cred"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:id="@+id/cred2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/texto_obs_register_caller_id"
        android:layout_below="@+id/cred2"
        android:layout_marginTop="20dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/cred3"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/app_button"
        android:textColor="#fff"
        android:onClick="continuar"
        android:text="@string/texto_botao_register_caller_id"/>

</RelativeLayout>
