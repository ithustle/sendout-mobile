<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_suporte"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suporte_nome"
        android:hint="@string/suporte_nome"
        android:background="@drawable/input_style"
        android:padding="10dp"
        android:textSize="16sp"
        android:inputType="textPersonName|textCapWords"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suporte_email"
        android:hint="@string/suporte_email"
        android:background="@drawable/input_style"
        android:padding="10dp"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/suporte_assunto"
        android:hint="@string/suporte_assunto"
        android:background="@drawable/input_style"
        android:padding="10dp"
        android:textSize="16sp"
        android:inputType="textEmailSubject|textCapSentences"
        android:layout_marginBottom="16dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/suporte_mensagem"
        android:hint="@string/suporte_mensagem"
        android:background="@drawable/inputs"
        android:inputType="textMultiLine|textCapSentences"
        android:lines="8"
        android:textSize="16sp"
        android:minLines="6"
        android:gravity="top|left"
        android:maxLines="10"
        android:padding="10dp"/>

</LinearLayout>
