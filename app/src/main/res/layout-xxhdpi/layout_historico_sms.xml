        android:ellipsize="end"
        android:lines="1"
        android:id="@+id/sms_historico_preview"
        android:layout_below="@+id/historico_numero"
        android:layout_toRightOf="@+id/lista_foto"
        android:layout_toEndOf="@+id/lista_foto"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="1dp" />

